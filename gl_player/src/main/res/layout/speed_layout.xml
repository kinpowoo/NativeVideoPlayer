<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckedTextView
        android:id="@+id/speed_05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:tag="0.5"
        android:textColor="@color/speed_text_color"
        android:text="0.5x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckedTextView
        android:id="@+id/speed_075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_05"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/speed_text_color"
        android:text="0.75x"
        android:tag="0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckedTextView
        android:id="@+id/speed_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_075"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/speed_text_color"
        android:text="1.0x"
        android:tag="1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckedTextView
        android:id="@+id/speed_125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_100"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/speed_text_color"
        android:text="1.25x"
        android:tag="1.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckedTextView
        android:id="@+id/speed_150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_125"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/speed_text_color"
        android:text="1.5x"
        android:tag="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckedTextView
        android:id="@+id/speed_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_150"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/speed_text_color"
        android:text="2.0x"
        android:tag="2.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>